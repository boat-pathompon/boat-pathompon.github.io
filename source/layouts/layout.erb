<!doctype html>
<html>
  <head>
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta charset="utf-8">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">

    <!-- OG meta -->
    <meta property="og:title" content="<%= current_page.data.og_title %>">
    <meta property="og:description" content="<%= current_page.data.og_description %>">
    <meta property="og:image" content="<%= current_page.data.og_image %>">
    <meta property="og:url" content="<%= current_page.data.og_url %>">

    <link href='https://fonts.googleapis.com/css?family=Kanit:400,200,500,400italic,200italic,500italic&subset=thai,latin' rel='stylesheet' type='text/css'>
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
    <%= stylesheet_link_tag 'main' %>

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title %> | Little B</title>
  </head>

  <body class="<%= page_classes %>">
    <div id="main-content">
      <%= yield %>
    </div>

    <footer id='main-footer'>
      <span>Copyright Â® 2015 <a href='/' class='site-name'>LittleB</a></span>
    </footer>
  </body>
</html>
