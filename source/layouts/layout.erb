<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= "#{current_page.data.title} | Little B" %></title>
    <link href='http://fonts.googleapis.com/css?family=Roboto+Condensed:400,300,700' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Dancing+Script' rel='stylesheet' type='text/css'>
    <%= stylesheet_link_tag "normalize", "all" %>

    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <%= javascript_include_tag  "all" %>
  </head>

  <body class="<%= page_classes %>">
    <header class='container'>
      <div class='content-wrapper'>
        <a href='/' id='logo'>LittleB<span class='suffix'><i class='fa fa-paint-brush'></i>.land</span></a>
        <nav id='topnav'>
          <ul>
            <li><a href='/'><i class='fa fa-home'></i>Home</a></li>
            <li><a href='/posts'><i class='fa fa-folder-open'></i>Posts</a></li>
            <li><a href='/tags'><i class='fa fa-tags'></i>Tags</a></li>
            <li><a href='/about-me'><i class='fa fa-paper-plane'></i>About Me</a></li>
            <li><a class='follow-fb-link' href='http://facebook.com/little.b.cartoon' target='_blank'><i class='fa fa-facebook'></i>Follow Me</a></li>
          </ul>
        </nav>
      </div>
    </header>

    <h1 id='page-title'>
      <span class='content-wrapper'><%= current_page.data.title %></span>
    </h1>

    <div id='content' class='content-wrapper'>
      <%= yield %>
    </div>

    <% unless current_page.data.no_footer %>
      <nav id='footer'>
        <ul class='container content-wrapper'>
          <li><a href='/'><i class='fa fa-home'></i>Home</a></li>
          <li><a href='/posts'><i class='fa fa-folder-open'></i>Posts</a></li>
          <li><a href='/tags'><i class='fa fa-tags'></i>Tags</a></li>
          <li><a href='/about-me'><i class='fa fa-paper-plane'></i>About Me</a></li>
          <li><a href='http://facebook.com/little.b.cartoon' target='_blank'><i class='fa fa-facebook'></i>Facebook Page</a></li>
          <li class='copyright'>Copyright Â® 2015 Little B</li>
        </ul>
      </nav>
    <% end %>
  </body>
</html>
