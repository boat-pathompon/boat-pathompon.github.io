<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "The Middleman" %></title>

    <link href='http://fonts.googleapis.com/css?family=Dancing+Script' rel='stylesheet' type='text/css'>
    <%= stylesheet_link_tag "normalize", "all" %>

    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <%= javascript_include_tag  "all" %>
  </head>

  <body class="<%= page_classes %>">
    <header>
      <a href='/' id='logo'>LittleB<span class='suffix'>.land</span></a>

      <ul id='topnav'>
        <li class='hidden--640'>
          <a href='' class='nav--allpost'>
            <i class='fa fa-list'></i>
            <span class='text'>โพสต์ทั้งหมด</span>
          </a>
        </li>

        <li class='hidden--640'>
          <a href='' class='nav--contact'>
            <i class='fa fa-envelope'></i>
            <span class='text'>Contact us</span>
          </a>
        </li>

        <li>
          <a href='' class='nav--facebook'>
            <i class='fa fa-facebook'></i>
          </a>
        </li>

        <li class='nav--menu'>
          <a href='' class='js--nav--menu--toggle'>
            <i class='fa fa-reorder notext notext'></i>
          </a>
          <ul class='nav--menu--dropdown'>
            <li>
              <a href=''>
                <i class='fa fa-list'></i>
                <span class='text'>โพสต์ทั้งหมด</span>
              </a>
            </li>

            <li>
              <a href=''>
                <i class='fa fa-envelope'></i>
                <span class='text'>Contact us</span>
              </a>
            </li>
          </ul>
        </li>
      </ul>
    </header>

    <div id='content'>
      <%= yield %>
    </div>
  </body>
</html>
