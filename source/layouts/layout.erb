<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "The Middleman" %></title>

    <link href='http://fonts.googleapis.com/css?family=Dancing+Script' rel='stylesheet' type='text/css'>
    <%= stylesheet_link_tag "normalize", "all" %>

    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <%= javascript_include_tag  "all" %>
  </head>

  <body class="<%= page_classes %>">
    <header>
      <a href='/' id='logo'>LittleB<span class='suffix'>.land</span></a>

      <div id='topnav'>
        <ul class='nav-items'>
          <li><a href='' class='nav-allpost'><i class='fa fa-reorder'></i>หัวข้อทั้งหมด</a></li>
          <ul class='nav-socials'>
            <li><a href='' class='nav-contact nav-circle'><i class='fa fa-envelope'></i></a></li>
            <li><a href='https://www.facebook.com/little.b.cartoon' class='nav-facebook nav-circle'><i class='fa fa-facebook'></i></a></li>
          </ul>
        </ul>
      </div>
    </header>

    <div id='content'>
      <%= yield %>
    </div>
  </body>
</html>
